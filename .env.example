# ============================================================================
# BELIZECHAIN INFRASTRUCTURE - PRODUCTION CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your production values
# Last Updated: February 14, 2026
# ============================================================================

# ============================================================================
# BLOCKCHAIN NODE CONFIGURATION
# ============================================================================
CHAIN=mainnet
BASE_PATH=/data
NODE_NAME=BelizeChain-Production-Node-1
LOG_LEVEL=info

# Ports
P2P_PORT=30333
RPC_PORT=9933
WS_PORT=9944

# Runtime Pallets (16 total - all enabled in production)
ENABLE_PALLET_ECONOMY=true
ENABLE_PALLET_BELIZEX=true
ENABLE_PALLET_PAYROLL=true
ENABLE_PALLET_GOVERNANCE=true
ENABLE_PALLET_COMMUNITY=true
ENABLE_PALLET_IDENTITY=true
ENABLE_PALLET_COMPLIANCE=true
ENABLE_PALLET_ORACLE=true
ENABLE_PALLET_STAKING=true
ENABLE_PALLET_CONSENSUS=true
ENABLE_PALLET_INTEROPERABILITY=true
ENABLE_PALLET_QUANTUM=true
ENABLE_PALLET_MESH=true
ENABLE_PALLET_LANDLEDGER=true
ENABLE_PALLET_BNS=true
ENABLE_PALLET_CONTRACTS=true

# Meshtastic LoRa Mesh Network (optional)
MESH_NETWORK_ENABLED=false
MESH_NODE_ID=
MESH_CHANNEL=BelizeChain

# Performance Targets
TARGET_TPS=2000
BLOCK_TIME=6
MAX_BLOCK_SIZE=5242880

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=belizechain
POSTGRES_USER=belizechain
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================================================
# NAWAL FEDERATED LEARNING CONFIGURATION
# ============================================================================
NAWAL_API_HOST=0.0.0.0
NAWAL_API_PORT=8080
NAWAL_ENV=production

# Federated Learning Settings
NAWAL_MIN_PARTICIPANTS=3
NAWAL_MAX_PARTICIPANTS=100
NAWAL_ROUNDS_PER_EPOCH=10
NAWAL_MIN_FIT_CLIENTS=2

# Differential Privacy (DP-SGD)
DIFFERENTIAL_PRIVACY_ENABLED=true
DP_NOISE_MULTIPLIER=1.1
DP_MAX_GRAD_NORM=1.0
DP_DELTA=1e-5

# Genetic Algorithm Model Evolution
GENETIC_ALGORITHM_ENABLED=true
GA_POPULATION_SIZE=10
GA_GENERATIONS=5
GA_MUTATION_RATE=0.1

# Byzantine Detection & Security
BYZANTINE_DETECTION_ENABLED=true
COSINE_SIMILARITY_THRESHOLD=0.8
GRADIENT_VERIFICATION_ENABLED=true
GRADIENT_NORM_THRESHOLD=10.0

# Data Poisoning Detection
DATA_POISONING_DETECTION=true
KL_DIVERGENCE_THRESHOLD=0.5
LOSS_SPIKE_THRESHOLD=2.0

# Data Leakage Detection
DATA_LEAKAGE_DETECTION=true
MEMBERSHIP_INFERENCE_ENABLED=true
GRADIENT_INVERSION_DETECTION=true

# ============================================================================
# KINICH QUANTUM COMPUTING CONFIGURATION
# ============================================================================
KINICH_API_HOST=0.0.0.0
KINICH_API_PORT=8888
KINICH_ENV=production

# Quantum Backend
KINICH_MAX_CONCURRENT_JOBS=50
KINICH_DEFAULT_BACKEND=qasm_simulator
KINICH_ENABLE_ERROR_MITIGATION=true

# Azure Quantum (Primary Backend)
AZURE_QUANTUM_ENABLED=true
AZURE_QUANTUM_SUBSCRIPTION_ID=YOUR_AZURE_SUBSCRIPTION_ID
AZURE_QUANTUM_RESOURCE_GROUP=YOUR_RESOURCE_GROUP
AZURE_QUANTUM_WORKSPACE=YOUR_WORKSPACE_NAME
AZURE_QUANTUM_LOCATION=eastus

# IBM Quantum (Fallback Backend)
IBM_QUANTUM_ENABLED=false
IBM_QUANTUM_TOKEN=YOUR_IBM_QUANTUM_TOKEN
IBM_QUANTUM_HUB=ibm-q
IBM_QUANTUM_GROUP=open
IBM_QUANTUM_PROJECT=main

# Circuit Optimization
CIRCUIT_OPTIMIZATION_LEVEL=3
MAX_QUBITS=127
MAX_SHOTS=100000

# Error Mitigation - Zero Noise Extrapolation (ZNE)
ZNE_ENABLED=true
ZNE_NOISE_FACTORS=[1,2,3]

# Error Mitigation - Readout Mitigation
READOUT_MITIGATION_ENABLED=true

# Hybrid Quantum-Classical
HYBRID_MODE_ENABLED=true
CLASSICAL_OPTIMIZER=COBYLA
TRANSPILE_OPTIMIZATION_LEVEL=3

# ============================================================================
# PAKIT STORAGE CONFIGURATION
# ============================================================================
PAKIT_API_HOST=0.0.0.0
PAKIT_API_PORT=8001
PAKIT_ENV=production

# Storage Configuration
STORAGE_DIR=/app/storage
MAX_FILE_SIZE=524288000
ENABLE_COMPRESSION=true
COMPRESSION_ALGORITHMS=zstd,lz4,snappy
ENABLE_DEDUPLICATION=true
CHUNK_SIZE=4194304

# Public Access Mode
PAKIT_PUBLIC_MODE=view-only
PUBLIC_UPLOAD_ENABLED=false
PUBLIC_DOWNLOAD_ENABLED=false

# Blockchain Integration
BLOCKCHAIN_ENABLED=true
REQUIRE_BELIZEID_FOR_PROOFS=true

# Sovereign DAG Backend (PRIMARY)
DAG_BACKEND_ENABLED=true
DAG_REPLICATION_FACTOR=5
DAG_QUANTUM_COMPRESSION=true

# ZK Proof Support
ZK_PROOF_ENABLED=true
ZK_PROOF_SYSTEM=groth16
ZK_VERIFY_ON_UPLOAD=true
ZK_PROOF_CACHE_DIR=/app/cache/zk-proofs

# IPFS Backend (OPTIONAL)
IPFS_ENABLED=false
IPFS_API=http://ipfs:5001

# Arweave Backend (OPTIONAL)
ARWEAVE_ENABLED=false

# Cache Settings
CACHE_DIR=/app/cache
CACHE_MAX_SIZE=107374182400
CACHE_TTL=7200

# ============================================================================
# IPFS CONFIGURATION
# ============================================================================
IPFS_PROFILE=server
IPFS_SWARM_PORT=4001
IPFS_API_PORT=5001
IPFS_GATEWAY_PORT=8082

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Prometheus
PROMETHEUS_RETENTION=30d

# Grafana
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
GRAFANA_USERS_ALLOW_SIGN_UP=false

# ============================================================================
# UI APPLICATIONS
# ============================================================================
# Blue Hole Portal (Government Dashboard)
NEXT_PUBLIC_BLUEHOLE_BLOCKCHAIN_RPC=https://rpc.belizechain.org
NEXT_PUBLIC_BLUEHOLE_BLOCKCHAIN_WS=wss://ws.belizechain.org

# Maya Wallet (Citizen Portal)
NEXT_PUBLIC_MAYA_BLOCKCHAIN_RPC=https://rpc.belizechain.org
NEXT_PUBLIC_MAYA_BLOCKCHAIN_WS=wss://ws.belizechain.org

# Shared UI Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.belizechain.org
NEXT_PUBLIC_NAWAL_API=https://ai.belizechain.org
NEXT_PUBLIC_KINICH_API=https://quantum.belizechain.org
NEXT_PUBLIC_PAKIT_API=https://storage.belizechain.org

# ============================================================================
# NETWORK & INFRASTRUCTURE
# ============================================================================
ENVIRONMENT=production
DEBUG=false
WORKERS=8

# ============================================================================
# SECURITY
# ============================================================================
# API Keys (generate secure random strings)
PAKIT_API_KEY=GENERATE_SECURE_RANDOM_KEY_HERE

# Arweave (if enabled)
ARWEAVE_WALLET_PATH=/secrets/arweave-wallet.json

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Add any external service configurations here

# ============================================================================
# NOTES
# ============================================================================
# 1. Replace ALL "CHANGE_ME" and "YOUR_" placeholders with actual values
# 2. Use strong passwords (minimum 32 characters, random)
# 3. Never commit .env file to version control
# 4. Rotate secrets regularly (every 90 days recommended)
# 5. Use Kubernetes secrets for production deployments
# 6. Enable all security features in production
# 7. Review and update this file after each infrastructure upgrade
