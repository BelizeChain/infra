# Next.js UI Dockerfile (for all UI apps)
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./
COPY ui/shared/package.json ./ui/shared/
COPY ui/${APP_NAME}/package.json ./ui/${APP_NAME}/

# Install dependencies
RUN npm ci

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app

ARG APP_NAME

COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build the specific app
RUN npm run build --workspace=ui/${APP_NAME}

# Production image
FROM base AS runner
WORKDIR /app

ARG APP_NAME
ENV NODE_ENV production
ENV NEXT_TELEMETRY_DISABLED 1

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built files
COPY --from=builder /app/ui/${APP_NAME}/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/ui/${APP_NAME}/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/ui/${APP_NAME}/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT 3000
ENV HOSTNAME "0.0.0.0"

CMD ["node", "server.js"]
